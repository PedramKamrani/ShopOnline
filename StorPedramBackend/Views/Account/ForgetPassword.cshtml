@model CorService.ViewModels.Users.FogotPasswordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AccountLayout1.cshtml";
}

<div class="c-account_box-headline">یاد آوری کلمه عبور</div>
<div class="c-account_box-content">
    <form asp-action="ForgetPassword" class="c-form_account">
        <div class="c-form_account-title">پست الکترونیک یا شماره موبایل</div>
        <div class="c-form_account-row">
            <div class="c-form_account-col">
                <label class="c-form_account-label c-form_account-label_username">
                    <input asp-for="Phone" class="c-form_account-input" placeholder="پست الکترونیک یا شماره موبایل خود را وارد نمایید">
                    <span asp-validation-for="Phone" class="field-error"></span>

                </label>
            </div>
        </div>




        <div class="c-form_account-row">
            <div class="c-form_account-col">
                <button class="c-form_account-btn c-form_account-btn_forget">یادآوری کلمه عبور </button>
            </div>
        </div>



    </form>
</div>


@section script{
    <script src="~/js/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/js/jquery.validate.min.js"></script>
    <script src="~/js/jquery.validate.unobtrusive.js"></script>
}
