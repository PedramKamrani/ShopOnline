@model IEnumerable<CorService.ViewModels.Users.ShowUserViewModel>
@{
    ViewData["Title"] = "RoleList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    @if (TempData["res"] != null)
    {
        if (TempData["res"].ToString() == "success")
        {
            <div class="alert alert-success alert-dismissible">
                <button type="button" class="close pull-left" data-dismiss="alert" aria-hidden="true">×</button>

                عملیات با موفقیت انجام شد
            </div>
        }
        @if (TempData["res"].ToString() == "faild")
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close pull-left" data-dismiss="alert" aria-hidden="true">×</button>

                خطا در انجام عملیات
            </div>
        }
    }

    <div class="box">
        <div class="box-header with-border">
            <a asp-action="CreateRole" class="btn btn-success">اضافه کردن کاربر</a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th>@Html.DisplayNameFor(model => model.IActive)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IActive)
                    </td>
                    <td>
                        <a asp-action="CreateBrand" class="btn btn-danger">حذف</a>
                        <a asp-action="EditRole" asp-route-id="@item.UserId" class="btn btn-info">ویرایش</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>


