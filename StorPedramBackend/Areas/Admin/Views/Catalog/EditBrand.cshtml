@model CorService.ViewModels.Brand.BrandEditViewModel
@{
    ViewData["Title"] = "EditBrand";
    ViewData["id"] = Model.id;
    TempData["Imgname"]=Model.ImageName;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">ویرایش برند  </h3>
        </div>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="EditBrand" enctype="multipart/form-data">
                    <div class="box-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="FaTitle" class="control-label"></label>
                            <input asp-for="FaTitle" class="form-control" />
                            <span asp-validation-for="FaTitle" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EnTitle" class="control-label"></label>
                            <input asp-for="EnTitle" class="form-control" />
                            <span asp-validation-for="EnTitle" class="text-danger"></span>
                        </div>
                        <div class="form-group">

                            <img src="~/img/brand/@Model.ImageName" class="form-control" style="max-width:138px" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Image" class="control-label"></label>
                            <input asp-for="Image" type="file" accept="image/*" class="form-control" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Deccription" class="control-label"></label>
                            <textarea asp-for="Deccription" type="file" accept="image/*" class="form-control">

</textarea>
                            <span asp-validation-for="Deccription" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="hidden" asp-for="IsDelete" />
                        </div>
                        <div class="form-group">
                            <input type="submit" value="ویرایش" class="btn btn-success" />
                            <a asp-action="ProductListContainer" class="btn btn-danger">انصراف</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

