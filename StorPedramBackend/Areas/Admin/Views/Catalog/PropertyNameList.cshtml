@model IEnumerable<DataLayer.Entites.Proprty.ProprtyName>
@{
    ViewData["Title"] = "PropertyNameList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

    <div class="content">
        @if (TempData["res"] != null)
        {
            if (TempData["res"].ToString() == "success")
            {
                <div class="alert alert-success alert-dismissible">
                    <button type="button" class="close pull-left" data-dismiss="alert" aria-hidden="true">×</button>

                    عملیات با موفقیت انجام شد
                </div>
            }
            @if (TempData["res"].ToString() == "faild")
            {
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close pull-left" data-dismiss="alert" aria-hidden="true">×</button>

                    خطا در انجام عملیات
                </div>
            }
        }

        <div class="box">
            <div class="box-header with-border">
                <a asp-action="CreatePropertyName" class="btn btn-success">ایجاد نام خصوصیت جدید</a>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.PropertyNameId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Priority)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UseSearch)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PropertyGroupId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.WikiText)
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.PropertyNameId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Priority)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UseSearch)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PropertyGroupId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.WikiText)
                            </td>

                            <td>
                                <a asp-action="EditPropertyName" asp-route-id="@item.PropertyNameId" class="btn btn-info">ویرایش</a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

