@model CorService.ViewModels.Slider.SliderViewModel.EditSliderViewModel
@{
    ViewData["Title"] = "EditSlider";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    TempData["sliderid"] = Model.sliderid;
    TempData["imgename"] = Model.CurrentImgName;
}

<div class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">ایجاد اسلایدر جدید </h3>
        </div>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="EditSlider" enctype="multipart/form-data">
                    <div class="box-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="form-group">
                            <label asp-for="Descrption" class="control-label"></label>
                            <input asp-for="Descrption" class="form-control" />
                            <span asp-validation-for="Descrption" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="sort" class="control-label"></label>
                            <input asp-for="sort" class="form-control" />
                            <span asp-validation-for="sort" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Link" class="control-label"></label>
                            <input asp-for="Link" class="form-control" />
                            <span asp-validation-for="Link" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <img src="~/img/slider/@Model.CurrentImgName" width="500" class="thumbnail" />
                        </div>
                        <div class="form-group">
                            <label asp-for="DesktopImg" class="control-label"></label>
                            <input asp-for="DesktopImg" type="file" class="form-control" />
                            <span asp-validation-for="DesktopImg" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <img src="~/img/slider/mobile-slider/@Model.CurrentImgName" width="200" class="thumbnail" />
                        </div>

                        <div class="form-group">
                            <label asp-for="MobileImg" class="control-label"></label>
                            <input asp-for="MobileImg" type="file" class="form-control" />
                            <span asp-validation-for="MobileImg" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
<div>
    <a class="btn btn-primary" asp-action="SliderList">بازگشت به لیست</a>
</div>
